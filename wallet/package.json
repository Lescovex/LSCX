{
    "name": "lescovex",
    "version": "1.0.6",
    "description": "Lescovex decentralized exchange, wallet and contract issuer",
    "main": "main.js",
    "author": "Lescovex",
    "license": "Creative Commons Non Derivates",
    "repository": {
        "type": "git",
        "url": "https://github.com/Lescovex/LSCX.git"
    },
    "scripts": {
        "start": "webpack-dev-server --inline --progress --port 8080",
        "build": "rimraf build && webpack --config webpack.config.js --progress --profile --bail",
        "watch": "webpack --watch --progress --profile --colors --display-error-details --display-cached",
        "electron:w": "npm run watch && electron .",
        "electron": "npm run build && electron .",
        "postinstall": "electron-builder install-app-deps",
        "dist": "electron-builder",
        "release": "build",
        "publish": "build -p always"
    },
    "publish": {
        "provider": "github"
    },
    "dependencies": {
        "@angular/animations": "~4.2.0",
        "@angular/cdk": "2.0.0-beta.8",
        "@angular/common": "~4.2.0",
        "@angular/compiler": "~4.2.0",
        "@angular/core": "~4.2.0",
        "@angular/forms": "~4.2.0",
        "@angular/http": "~4.2.0",
        "@angular/material": "2.0.0-beta.8",
        "@angular/platform-browser": "~4.2.0",
        "@angular/platform-browser-dynamic": "~4.2.0",
        "@angular/router": "~4.2.0",
        "angular-material": "^1.1.8",
        "bs58check": "^2.1.1",
        "chalk": "^2.3.0",
        "core-js": "^2.4.1",
        "electron-updater": "^3.1.2",
        "ethereumjs-abi": "^0.6.5",
        "ethereumjs-block": "^1.7.0",
        "ethereumjs-devp2p": "^2.2.0",
        "ethereumjs-tx": "^1.3.3",
        "ethereumjs-util": "^5.2.0",
        "ethereumjs-wallet": "^0.6.0",
        "got": "^8.3.0",
        "hammerjs": "^2.0.8",
        "human-standard-token-abi": "^1.0.2",
        "js-sha256": "^0.9.0",
        "leveldown": "^3.0.0",
        "levelup": "^2.0.2",
        "node-loader": "^0.6.0",
        "qrcode": "^1.2.0",
        "rxjs": "^5.0.3",
        "scrypt": "^6.0.3",
        "scryptsy": "^2.0.0",
        "swarm-js": "^0.1.37",
        "uuid": "^3.2.1",
        "web3": "^0.19.1",
        "webpack-node-externals": "^1.6.0",
        "zone.js": "^0.8.4"
    },
    "devDependencies": {
        "@types/hammerjs": "^2.0.35",
        "@types/jasmine": "2.5.36",
        "@types/node": "^6.0.45",
        "@types/webpack-env": "^1.13.6",
        "ajv": "^6.0.0",
        "angular": "^1.7.2",
        "angular-animate": "^1.7.2",
        "angular-aria": "^1.7.2",
        "angular-messages": "^1.7.2",
        "angular2-template-loader": "^0.6.0",
        "awesome-typescript-loader": "^3.0.4",
        "bignumber.js": "^7.2.1",
        "bip39": "^2.5.0",
        "copy-webpack-plugin": "^4.3.1",
        "css-loader": "^0.26.1",
        "electron": "^2.0.8",
        "electron-builder": "^20.19.2",
        "electron-packager": "^12.1.0",
        "extract-text-webpack-plugin": "2.0.0-beta.5",
        "file-loader": "^0.9.0",
        "hdkey": "^1.1.0",
        "html-loader": "^0.4.3",
        "html-webpack-plugin": "^2.16.1",
        "jasmine-core": "^2.4.1",
        "karma": "^3.0.0",
        "karma-chrome-launcher": "^2.0.0",
        "karma-jasmine": "^1.0.2",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^2.0.1",
        "null-loader": "^0.1.1",
        "raw-loader": "^0.5.1",
        "rimraf": "^2.5.2",
        "socket.io": "^2.1.1",
        "style-loader": "^0.13.1",
        "typescript": "~2.3.1",
        "url-parse": "^1.4.3",
        "webpack": "2.2.1",
        "webpack-dev-server": "2.4.1",
        "webpack-merge": "^3.0.0"
    },
    "build": {
        "asar": true,
        "appId": "Lescovex",
        "mac": {
            "target": "dmg",
            "icon": "./lescovex.png",
            "publish": {
                "provider": "github",
                "owner": "Lescovex",
                "releaseType": "draft",
                "publishAutoUpdate": "true",
                "repo": "LSCX"
            }
        },
        "win": {
            "icon": "./lescovex.ico",
            "target": "nsis",
            "publish": {
                "provider": "github",
                "owner": "Lescovex",
                "releaseType": "draft",
                "publishAutoUpdate": "true",
                "repo": "LSCX"
            }
        },
        "linux": {
            "target": "AppImage",
            "icon": "./lescovex.png",
            "publish": {
                "provider": "github",
                "owner": "Lescovex",
                "releaseType": "draft",
                "publishAutoUpdate": "true",
                "repo": "LSCX"
            }
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": true
        },
        "files": [
            "build",
            "main.js",
            "config"
        ]
    }
}